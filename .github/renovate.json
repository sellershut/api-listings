{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "semanticCommits": "enabled",
  "rebaseWhen": "conflicted",
  "packageRules": [
    {
      "matchPackagePatterns": [
        "opentelemetry"
      ],
      "groupName": "opentelemetry"
    },
    {
      "matchPackagePatterns": [
        "async-graphql"
      ],
      "groupName": "async-graphql"
    }
  ]
}
